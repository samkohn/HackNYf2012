extends layout

block content
  script(src='/javascripts/queryetsy.js')
  #header
    img.logo(src='https://s3.amazonaws.com/siteassets.etsy.com/press/Website/etsy-logo.png')
    
  form.standardBorder(name='query', id='etsyquery')
    input(id='api', name='api', type='hidden', value='etsy')
    label(for='type') Type of thing:
    select(id='type', name='type')
      option(value='color') Color
      option(value='category') Etsy Category
      option(value='min_price') Min Price
      option(value='max_price') Max Price
      option(value='materials') Material
      option(value='private') Number of Items in API
      option(value='keywords') Item Description
    br
    label(for='search') Your Search:
    input(id='search', name='search', type='text')

  span.button.standardBorder#submit Submit Query


